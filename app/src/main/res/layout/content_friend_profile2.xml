<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/content_user_profile"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.team21.cs465.uome.activities.FriendProfile2"
    >

    <Button
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:background="@drawable/settings"
        android:id="@+id/settings"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <Button

        android:background="@drawable/menu"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:id="@+id/button3" />

    <Button
        android:background="@drawable/write"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:id="@+id/new_favor"
        android:layout_marginRight="11dp"
        android:layout_marginEnd="11dp"
        android:layout_alignParentTop="true"
        android:layout_toLeftOf="@+id/settings"
        android:layout_toStartOf="@+id/settings" />

    <View

        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@android:color/darker_gray"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/settings"
        android:id="@+id/quickButtonsDivider" />

    <TextView
        android:text="Ravid Chi"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/quickButtonsDivider"
        android:layout_centerHorizontal="true"
        android:fontFamily="sans-serif-black"
        android:textSize="35sp"
        android:textColor="@color/colorPrimary"
        android:id="@+id/fullName" />
    <TextView
        android:text="ravidchi"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/fullName"
        android:layout_centerHorizontal="true"
        android:fontFamily="sans-serif-black"
        android:textSize="20sp"
        android:textColor="@color/colorPrimary"
        android:id="@+id/userName" />

    <ImageView
        android:layout_width="125dp"
        android:layout_height="125dp"
        app:srcCompat="@drawable/ravid"

        android:id="@+id/imageView"
        android:layout_below="@+id/userName"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:text="Level"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignRight="@+id/new_favor"
        android:layout_alignEnd="@+id/new_favor"
        android:fontFamily="sans-serif-black"
        android:textSize="35sp"
        android:textColor="@color/colorPrimary"
        android:id="@+id/levelText"
        android:layout_below="@+id/userName" />

    <TextView
        android:text='"The Begger"'
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/levelNum"
        android:layout_alignRight="@+id/levelText"
        android:layout_alignEnd="@+id/levelText"
        android:id="@+id/textView5"
        android:layout_alignLeft="@+id/levelText"
        android:layout_alignStart="@+id/levelText"
        android:textAlignment="center" />

    <TextView
        android:text="3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="sans-serif-black"
        android:textSize="35sp"
        android:textColor="@color/colorPrimary"
        android:id="@+id/levelNum"
        android:layout_below="@+id/levelText"
        android:layout_alignRight="@+id/levelText"
        android:layout_alignEnd="@+id/levelText"
        android:layout_alignLeft="@+id/levelText"
        android:layout_alignStart="@+id/levelText"
        android:textAlignment="center" />

    <ImageView
        android:layout_width="60dp"
        android:layout_height="10dp"
        app:srcCompat="@drawable/progress"
        android:id="@+id/progress"
        android:layout_below="@+id/textView5"
        android:layout_alignLeft="@+id/textView5"
        android:layout_alignStart="@+id/textView5"
        android:layout_alignRight="@+id/textView5"
        android:layout_alignEnd="@+id/textView5" />

    <View

        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@android:color/darker_gray"
        android:id="@+id/profileDivider"
        android:layout_below="@+id/imageView"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="17dp" />

    <TextView
        android:text="Badges"
        android:layout_below="@+id/profileDivider"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true"
        android:id="@+id/badges"
        android:fontFamily="sans-serif-black"
        android:textSize="30sp"
        android:textColor="@color/colorPrimary"/>

    <ImageView
        android:layout_width="50dp"
        android:layout_height="50dp"
        app:srcCompat="@drawable/car"
        android:layout_below="@+id/badges"
        android:layout_alignRight="@+id/button3"
        android:layout_alignEnd="@+id/button3"
        android:id="@+id/car" />

    <ImageView
        android:layout_width="50dp"
        android:layout_height="50dp"
        app:srcCompat="@drawable/heart"
        android:layout_alignBottom="@+id/car"
        android:layout_toRightOf="@+id/car"
        android:layout_toEndOf="@+id/car"
        android:id="@+id/heart" />



    <ImageView

        android:layout_width="50dp"
        android:layout_height="50dp"
        app:srcCompat="@drawable/man"
        android:layout_alignBottom="@+id/heart"
        android:layout_toRightOf="@+id/heart"

        android:layout_toEndOf="@+id/heart"
        android:layout_centerHorizontal="true"
        android:id="@+id/man" />

    <View

        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@android:color/darker_gray"
        android:id="@+id/badgesDivider"
        android:layout_below="@+id/man"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="17dp" />

    <View

        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@android:color/darker_gray"
        android:id="@+id/buttonsDivider"
        android:layout_below="@+id/message"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="17dp" />

    <TextView
        android:text="Ravid got 6 points from Rohit for:"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:id="@+id/colinPaidRohit"
        android:layout_marginTop="25dp"
        android:layout_below="@+id/buttonsDivider"
        android:layout_toRightOf="@+id/car"
        android:layout_alignRight="@+id/badges"
        android:layout_alignEnd="@+id/badges" />

    <TextView
        android:text="Can you take notes for me?"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/rideHome"
        android:fontFamily="casual"
        android:layout_marginTop="14dp"
        android:layout_below="@+id/colinPaidRohit"
        android:layout_toRightOf="@+id/heart"
        android:layout_toEndOf="@+id/heart" />

    <ImageView

        app:srcCompat="@drawable/like"
        android:id="@+id/imageView2"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_alignBottom="@+id/rideHome"
        android:layout_alignRight="@+id/progress"
        android:layout_alignEnd="@+id/progress" />
    <View

        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@android:color/darker_gray"
        android:id="@+id/favorDivider"
        android:layout_below="@+id/rideHome"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="17dp" />

    <Button
        android:text="Message"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/message"
        android:layout_marginTop="14dp"
        android:layout_below="@+id/badgesDivider"
        android:layout_toRightOf="@+id/car"
        android:layout_toEndOf="@+id/car"
        android:layout_marginLeft="32dp"
        android:layout_marginStart="32dp" />

    <Button
        android:text="Connect"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/connect"
        android:layout_above="@+id/buttonsDivider"
        android:layout_alignRight="@+id/imageView2"
        android:layout_alignEnd="@+id/imageView2"
        android:layout_marginRight="18dp"
        android:layout_marginEnd="18dp" />


</RelativeLayout>
